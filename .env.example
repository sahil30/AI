# OpenAI Configuration (Required)
OPENAI_API_KEY=your-openai-api-key-here

# Agent Configuration
LOG_LEVEL=INFO
MAX_RETRIES=3
TIMEOUT_SECONDS=30

# Choose your integration method:
# Option 1: Use MCP servers (Recommended for Claude Desktop integration)
USE_MCP_SERVERS=true
MCP_JIRA_SERVER_PATH=/absolute/path/to/mcp-jira-python
MCP_CONFLUENCE_SERVER_PATH=/absolute/path/to/mcp-confluence-python

# Option 2: Use custom API directly
USE_CUSTOM_API=false
API_BASE_URL=https://your-api-domain.com
API_KEY=your-custom-api-key
API_VERSION=v1

# Option 3: Use standard Atlassian APIs directly
USE_CUSTOM_API=false
USE_MCP_SERVERS=false

# Standard Jira Configuration (if not using MCP or custom API)
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_USERNAME=your-email@example.com
JIRA_API_TOKEN=your-jira-api-token

# Standard Confluence Configuration (if not using MCP or custom API)
CONFLUENCE_BASE_URL=https://your-domain.atlassian.net/wiki
CONFLUENCE_USERNAME=your-email@example.com
CONFLUENCE_API_TOKEN=your-confluence-api-token

# Java Processing Configuration
JAVA_OUTPUT_PATH=./generated_java